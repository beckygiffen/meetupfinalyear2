<form action="/addFriend" method="POST">
    <input type="email" name="email" id="email"placeholder="Enter Email">
    <input type="submit" value="Add" id ="btnAddFriend" class="btn waves-effect waves-light">
</form>
 {{#each contacts}}
  <h3 name="members" value="{{this.email}}"></h3>

  {{/each}}
  <div class="messageContainer"></div>
{{#if contactsExist}}
{{#each contacts}}
<div class="col s12 m6 name=">
    <div class="card blue-grey darken-1">
        <div class="card-content white-text">
            <span class="card-title">{{this.email}}</span>
            <p name ="members">{{this.email}}</p>
            <p>{{this.number}}</p>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<h1>No Contacts</h1>
{{/if}}